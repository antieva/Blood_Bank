<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <meta charset="utf-8">
    <title>Blood Banks</title>
  </head>
  <body>
    <header>
      <h1>Blood Bank Match Application</h1>
    </header>
    <div class="container">
      <nav>
        <a href="/home">Home</a> |
        <a href="/patients/list">Patients</a> |
        <a href="/donors/list">Donors</a> |
        <a href="/bloodbanks/list">Blood Banks</a>
      </nav>
      @if (@Model.Count == 0)
      {
        <h2><span class="red">No donors match this patient</span></h2>
      } else
      {
        <h2>Donors that match this patient:</h2>
        <ul>
        @foreach (var donor in @Model)
        {
          <li>@donor.GetName()</li>
          <ul>
          @foreach (var bloodBank in @donor.GetBloodBanks())
          {
            <li><a href="/bb/@bloodBank.GetId()/detail">@bloodBank.GetName()</a></li>
          }
          </ul>
        }
        </ul>
      }

    </div>
  </body>
</html>
